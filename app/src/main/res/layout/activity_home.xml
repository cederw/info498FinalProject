<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context="com.info498.bestgroup.tindar.Home"
android:animateLayoutChanges="true"
android:id="@+id/home"
android:clickable="false"
android:visibility="visible">

<TextView android:text="@string/app_name" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/title"
    android:textColor="#d32f2f"
    android:textSize="82dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="15dp" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="&quot;Stupid Tagline goes here&quot;"
    android:textColor="#d32f2f"
    android:id="@+id/tagline"
    android:textSize="24dp"
    android:layout_below="@+id/title"
    android:layout_centerHorizontal="true" />

<com.gc.materialdesign.views.ButtonRectangle
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    android:text="Find a new friend!"
    android:id="@+id/findButton"
    android:textSize="15dp"
    android:textColor="#ffffff"
    android:paddingStart="30dp"
    android:paddingEnd="26dp"
    android:paddingLeft="30dp"
    android:paddingRight="26dp"
    android:background="#009688"
    android:radius="100dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="61dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="@string/search"
    android:id="@+id/search"
    android:textColor="#009688"
    android:layout_above="@+id/findButton"
    android:layout_alignRight="@+id/title"
    android:layout_alignEnd="@+id/title"
    android:textSize="50dp"
    android:textIsSelectable="false"
    android:visibility="invisible" />

<com.gc.materialdesign.views.ButtonRectangle
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    android:text="Stop searching!"
    android:id="@+id/stopButton"
    android:textSize="15dp"
    android:textColor="#ffffff"
    android:paddingStart="30dp"
    android:paddingEnd="26dp"
    android:paddingLeft="30dp"
    android:paddingRight="26dp"
    android:background="#d32f2f"
    android:radius="100dp"
    android:visibility="invisible"
    android:layout_alignTop="@+id/title"
    android:layout_centerHorizontal="true"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp" />

<com.gc.materialdesign.views.ProgressBarCircularIndeterminate
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@android:style/Widget.Holo.Light.ProgressBar.Large"
    android:layout_centerHorizontal="true"
    android:id="@+id/spinner"
    android:visibility="invisible"
    android:indeterminate="false"
    android:layout_below="@+id/findButton" />

<ListView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/deviceList"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:paddingTop="12dp"
    android:paddingBottom="15dp"
    android:choiceMode="singleChoice"
    android:smoothScrollbar="false"
    android:visibility="invisible"
    android:background="#ffe3dfdc"
    android:layout_below="@+id/title"
    android:layout_alignParentBottom="true" />

</RelativeLayout>
